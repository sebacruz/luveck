# top-most EditorConfig file
root = true

# General settings
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# General code config
[*]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4
